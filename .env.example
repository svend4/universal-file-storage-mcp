# Universal File Storage MCP Server - Environment Variables
# Скопируйте этот файл в .env и заполните свои данные

# Порт сервера
PORT=3000

# Пароли для хранилищ
NAS_PASSWORD=your_nas_password_here
CLOUD_PASSWORD=your_cloud_password_here
YANDEX_PASSWORD=your_yandex_disk_password

# WebDAV URLs (если используете)
NEXTCLOUD_URL=https://cloud.example.com
NEXTCLOUD_USERNAME=your_username
NEXTCLOUD_PASSWORD=your_password

# AWS S3 (если используете)
AWS_ACCESS_KEY_ID=your_access_key
AWS_SECRET_ACCESS_KEY=your_secret_key
AWS_REGION=eu-central-1
AWS_BUCKET_NAME=my-files

# OCR настройки
# Языки для Tesseract (через +): eng+rus+deu
TESSERACT_LANGUAGES=eng+rus

# Лимиты
MAX_FILE_SIZE_MB=10
MAX_SEARCH_RESULTS=100
CHARACTER_LIMIT=25000

# Логирование
LOG_LEVEL=info
# Возможные значения: error, warn, info, debug

# Android ADB
# Если устройство по IP (через WiFi)
ANDROID_ADB_HOST=192.168.1.100:5555
